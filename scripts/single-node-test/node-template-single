

resource "google_compute_instance" "node-[[GATEWAY_ID]]" {
  name         = "${var.project_prefix}-${var.environment}-node-[[BLOCKCHAIN]]-[[GATEWAY_ID]]"
  machine_type = var.map_machine_types["gateway"]
  zone         = "${var.default_zone}"
  provider = google-beta

  tags = ["http-server", "https-server", "node", "ethereum"]

  boot_disk {
    initialize_params {
      image = "projects/ubuntu-os-cloud/global/images/ubuntu-2004-focal-v20210720"
      size = 20
    }
  }

  network_interface {
    network = "${var.network_interface}"

    access_config {
      // Ephemeral IP
    }
  }

  metadata_startup_script =  <<EOH
  #!/bin/bash
  #-------------------------------------------
  #  Update host file for Massbitroute.dev
  #-------------------------------------------
  sudo echo '
[[MASSBITROUTE_CORE_IP]] api.massbitroute.dev

[[MASSBITROUTE_PORTAL_IP]] portal.massbitroute.dev
[[MASSBITROUTE_PORTAL_IP]] staking.massbitroute.dev

127.0.0.1 localhost
' >> /etc/hosts


  #-------------------------------------------
  #  Install script for NODE
  #-------------------------------------------
  sudo bash -c "$(curl -sSfL 'https://dapi.massbitroute.dev/api/v1/node_install?id=[[GATEWAY_ID]]&user_id=[[USER_ID]]&blockchain=[[BLOCKCHAIN]]&network=mainnet&zone=[[ZONE]]&data_url=[[DATASOURCE]]&app_key=[[APP_KEY]]&portal_url=https://portal.massbitroute.dev&env=[[DEPLOY_BRANCH]]')"  >> /home/verification.log
  curl -sSfL 'https://dapi.massbitroute.dev/api/v1/node_install?id=[[GATEWAY_ID]]&user_id=[[USER_ID]]&blockchain=[[BLOCKCHAIN]]&network=mainnet&zone=[[ZONE]]&data_url=[[DATASOURCE]]&app_key=[[APP_KEY]]&portal_url=https://portal.massbitroute.dev&env=[[DEPLOY_BRANCH]]' > /home/install.sh
  EOH

  service_account {
    # Google recommends custom service accounts that have cloud-platform scope and permissions granted via IAM Roles.
    email = "${var.email}"
    scopes = ["cloud-platform"]
  }
}
