
resource "google_compute_instance" "mbr-gw-new-commit-test" {
  name         = "${var.project_prefix}-${var.environment}-gateway-[[BLOCKCHAIN]]-[[GATEWAY_ID]]"
  machine_type = var.map_machine_types["gateway"]
  zone         = "${var.default_zone}"
  provider = google-beta

  tags = ["http-server", "https-server"]

  boot_disk {
    initialize_params {
      image = "projects/ubuntu-os-cloud/global/images/ubuntu-2004-focal-v20210720"
      size = 20
    }
  }

  network_interface {
    network = "${var.network_interface}"

    access_config {
      // Ephemeral IP
    }
  }

  metadata_startup_script =  <<EOH
  #!/bin/bash
  #-------------------------------------------
  #  Update host file for Massbitroute.dev
  #-------------------------------------------
  sudo echo '
[[MASSBITROUTE_CORE_IP]] api.massbitroute.dev

[[MASSBITROUTE_PORTAL_IP]] portal.massbitroute.dev
[[MASSBITROUTE_PORTAL_IP]] staking.massbitroute.dev

127.0.0.1 localhost
' >> /etc/hosts


  #-------------------------------------------
  #  Install script for GATEWAY
  #-------------------------------------------
  sudo bash -c "$(curl -sSfL 'https://dapi.massbitroute.dev/api/v1/gateway_install?id=[[GATEWAY_ID]]&user_id=[[USER_ID]]&blockchain=[[BLOCKCHAIN]]&network=mainnet&zone=[[ZONE]]&app_key=[[APP_KEY]]&portal_url=https://portal.massbitroute.dev&env=[[DEPLOY_BRANCH]]')"  >> /home/verification.log
  curl -sSfL 'https://dapi.massbitroute.dev/api/v1/gateway_install?id=[[GATEWAY_ID]]&user_id=[[USER_ID]]&blockchain=[[BLOCKCHAIN]]&network=mainnet&zone=[[ZONE]]&app_key=[[APP_KEY]]&portal_url=https://portal.massbitroute.dev&env=[[DEPLOY_BRANCH]]' > /home/install.sh
  EOH

  service_account {
    # Google recommends custom service accounts that have cloud-platform scope and permissions granted via IAM Roles.
    email = "${var.email}"
    scopes = ["cloud-platform"]
  }
}

output "mbr_gw_public_ip" {
  description = "Public IP of GW VM"
  value = google_compute_instance.mbr-gw-new-commit-test.network_interface.0.access_config.0.nat_ip
}
